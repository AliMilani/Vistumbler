<?xml version="1.0" encoding="utf-8"?>

<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory 
        android:title="WifiDB User Info"
        android:key="wifidb_user_info">
		<EditTextPreference
			android:key="wifidb_username"
			android:title="WifiDB Username" 
			android:summary="Define the wifidb user to use when uploading data"
            android:dialogTitle="WifiDB Username"
            android:dialogMessage="Provide a username"    
            android:defaultValue="Anonymous" />
        <EditTextPreference
			android:key="wifidb_apikey"
			android:title="WifiDB Api Key" 
			android:summary="Define the wifidb api key for the specified user"
            android:dialogTitle="WifiDB Api Key"
            android:dialogMessage="Provide a Api Key"    
            android:defaultValue="" />
    </PreferenceCategory>
    <PreferenceCategory 
        android:title="Upload Preferences"
        android:key="wifidb_upload_prefs">
		<ListPreference 
            android:key="wifidb_upload_interval"
            android:title="Upload interval"
            android:summary="Define how often data will be uploaded to the wifidb"
            android:defaultValue="10000"
            android:entries="@array/uploadInterval"
            android:entryValues="@array/uploadIntervalValues"
        />
		<EditTextPreference
			android:key="wifidb_upload_api_url"
			android:title="WifiDB Api URL" 
			android:summary="Define the path to the wifidb api url"
            android:dialogTitle="WifiDB Api URL"
            android:dialogMessage="Provide the Api URL"    
            android:defaultValue="http://dev01.wifidb.net/wifidb/api/" />
	</PreferenceCategory>
    <PreferenceCategory 
        android:title="Scan Preferences"
        android:key="wifidb_scan_prefs">
		<ListPreference 
            android:key="wifidb_scan_interval"
            android:title="Scan interval"
            android:summary="Define how often APs will be updates"
            android:defaultValue="2000"
            android:entries="@array/scanInterval"
            android:entryValues="@array/scanIntervalValues"
        />
	</PreferenceCategory>
</PreferenceScreen>
